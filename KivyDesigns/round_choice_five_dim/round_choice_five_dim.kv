<RoundChoiceFiveDim>:
    name: "round_choice_five_dim"

    FloatLayout:
        orientation: 'horizontal'
        size: 1280, 720

        Image:
            source: '/home/dawid/TicTacToeGame/TicTacToeUltimate/Assets/SETTINGS.gif'
            anim_delay: 0.04
            allow_stretch: True
            keep_ratio: False
            keep_data: True

        Label:
            text: 'UP TO HOW MANY WON ROUNDS\nWOULD YOU LIKE TO PLAY?'
            halign: 'center'
            bold: True
            font_size: 32
            color: (0, 0, 0, 1)
            pos_hint: {'center_x': .5, 'center_y': .85}

        ButtonMenu:
            text: '1 ROUND'
            pos_hint: {'center_x': .5, 'center_y': .65}
            on_release:
                app.root.current = "main_game_five_dim"
                root.manager.transition.direction = "left"

        ButtonMenu:
            text: '2 ROUNDS'
            pos_hint: {'center_x': .5, 'center_y': .5}
            on_release:
                app.root.current = "main_game_five_dim"
                root.manager.transition.direction = "left"

        ButtonMenu:
            text: '3 ROUNDS'
            pos_hint: {'center_x': .5, 'center_y': .35}
            on_release:
                app.root.current = "main_game_five_dim"
                root.manager.transition.direction = "left"

        NavigationButton:
            text: "BACK"
            on_release:
                app.root.current = "standard_flow"
                root.manager.transition.direction = "right"