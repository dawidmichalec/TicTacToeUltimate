<Play>:
    name: "play"

    FloatLayout:
        orientation: 'horizontal'
        size: 1280, 720

        Image:
            source: '/home/dawid/TicTacToeGame/TicTacToeUltimate/Assets/SETTINGS.gif'
            anim_delay: 0.02
            allow_stretch: True
            keep_ratio: False
            keep_data: True

        Label:
            text: 'CHOOSE VERSION OF THE GAME'
            bold: True
            font_size: 32
            color: (0, 0, 0, 1)
            pos_hint: {'center_x': .5, 'center_y': .85}

        ButtonMenu:
            text: 'STANDARD'
            pos_hint: {'center_x': .5, 'center_y': .65}
            on_release:
                app.root.current = "standard_flow"
                root.manager.transition.direction = "left"

        ButtonMenu:
            text: 'ULTIMATE'
            pos_hint: {'center_x': .5, 'center_y': .5}
            on_release:
                app.root.current = "ultimate_flow"
                root.manager.transition.direction = "left"

        NavigationButton:
            text: "BACK"
            on_release:
                app.root.current = "main_menu"
                root.manager.transition.direction = "right"