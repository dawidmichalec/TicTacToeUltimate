<BombPresentation>:
    name: "bomb_presentation"

    FloatLayout:
        orientation: 'horizontal'
        size: 1280, 720

        Image:
            source: '/home/dawid/TicTacToeGame/TicTacToeUltimate/Assets/Background Ultimate.gif'
            anim_delay: 0.04
            allow_stretch: True
            keep_ratio: False
            keep_data: True

        Label:
            text:
                ''
            halign: 'center'
            font_size: 23
            bold: True
            color: (0, 0, 0, 1)
            pos_hint: {'center_x': .5, 'center_y': .7}

        ButtonMenu:
            text: 'CONTINUE'
            pos_hint: {'center_x': .5, 'center_y': .4}

        NavigationButton:
            text: "BACK"
            pos_hint: {'center_x': .2, 'center_y': .22}
            on_release:
                app.root.current = "ultimate_power_ups_explanation"
                root.manager.transition.direction = "right"