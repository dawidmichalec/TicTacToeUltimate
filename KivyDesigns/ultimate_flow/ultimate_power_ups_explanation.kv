<UltimatePowerUpsExplanation>:
    name: "ultimate_power_ups_explanation"

    FloatLayout:
        orientation: 'horizontal'
        size: 1280, 720

        Image:
            source: '/home/dawid/TicTacToeGame/TicTacToeUltimate/Assets/Background Ultimate.gif'
            anim_delay: 0.04
            allow_stretch: True
            keep_ratio: False
            keep_data: True

        Label:
            text:
                ' Ultimate mode is a good old tic-tac-toe with a little twist.\n\nEach player can use up to three power-ups.\n\nPower-ups are given at the beginning of the match.\n\nEach power-up can be used only once.\n\nRemember to use them wisely!'
            halign: 'center'
            font_size: 23
            bold: True
            color: (0, 0, 0, 1)
            pos_hint: {'center_x': .5, 'center_y': .7}

        ButtonMenu:
            text: 'CONTINUE'
            pos_hint: {'center_x': .5, 'center_y': .4}
            on_release:
                app.root.current = "bomb_presentation"
                root.manager.transition.direction = "left"

        NavigationButton:
            text: "BACK"
            pos_hint: {'center_x': .2, 'center_y': .22}
            on_release:
                app.root.current = "ultimate_flow"
                root.manager.transition.direction = "right"