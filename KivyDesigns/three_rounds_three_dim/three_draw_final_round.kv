<ThreeDrawFinalRound>:
    name: "three_draw_final_round"

    FloatLayout:
        orientation: 'horizontal'
        size: 1280, 720

        MyImage:
            id: gif
            source: '/home/dawid/TicTacToeGame/TicTacToeUltimate/Assets/Animations/draw_final_round.gif'
            anim_delay: -1   # do not run the animation
            allow_stretch: True
            keep_ratio: False
            keep_data: True
            on_complete:
                if self.complete: root.manager.current='three_rounds_three_dim'; \
                self.anim_delay = -1; \
                self.texture = self._coreimage.image.textures[0]
                else: root.manager.current='three_draw_final_round'